---
interface Props {
  title?: string;
}

const { title = 'Handball Players Sport Test' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Handball Players Sport Test Management App" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <style is:global>
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          Oxygen, Ubuntu, Cantarell, sans-serif;
        background-color: #f0f4f8;
        color: #1a202c;
        line-height: 1.5;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
